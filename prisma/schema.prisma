generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String              @id
  username       String              @unique
  password_hash  String
  profilePicture String?
  sessions       Session[]
  knownSkills    KnownSkillOfUser[]
  wantedSkills   WantedSkillOfUser[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Skill {
  name     String              @id
  knownBy  KnownSkillOfUser[]
  wantedBy WantedSkillOfUser[]
}

model KnownSkillOfUser {
  skill     Skill  @relation(fields: [skillName], references: [name])
  skillName String
  user      User   @relation(fields: [userId], references: [id])
  userId    String

  @@id([skillName, userId])
}

model WantedSkillOfUser {
  skill     Skill  @relation(fields: [skillName], references: [name])
  skillName String
  user      User   @relation(fields: [userId], references: [id])
  userId    String

  @@id([skillName, userId])
}
